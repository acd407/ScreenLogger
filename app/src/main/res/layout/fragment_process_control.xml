<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 进程状态显示 -->
    <TextView
        android:id="@+id/tv_process_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NDK进程：已停止"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="12dp"
        android:background="@drawable/process_status_background"
        android:layout_marginBottom="16dp" />

    <!-- 控制按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/controls_background"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/btn_start_process"
            android:layout_width="140dp"
            android:layout_height="56dp"
            android:text="启动NDK进程"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:backgroundTint="@color/primary_color"
            android:textColor="@android:color/white"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btn_stop_process"
            android:layout_width="140dp"
            android:layout_height="56dp"
            android:text="停止NDK进程"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:backgroundTint="@color/error_color"
            android:textColor="@android:color/white"
            android:enabled="false" />
    </LinearLayout>

    <!-- 日志标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进程日志"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- 日志显示区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/logs_background"
        android:padding="12dp">

        <EditText
            android:id="@+id/tv_log_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="等待日志输出...\n"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:typeface="monospace"
            android:maxLines="100"
            android:editable="false"
            android:inputType="none"
            android:cursorVisible="false" />
    </ScrollView>
</LinearLayout>